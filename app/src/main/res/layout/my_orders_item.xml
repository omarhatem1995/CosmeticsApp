<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:layout_width="79dp"
        android:layout_height="79dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:elevation="40dp"
        android:id="@+id/image_my_orders"
        android:background="@drawable/view_bottom_sheet_rounded"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_my_orders"
        android:text="EBA - ACT"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/image_my_orders"
        app:layout_constraintStart_toEndOf="@id/image_my_orders"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_my_orders"
        android:text="Hair Lotion"
        android:textSize="13sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/name_my_orders"
        app:layout_constraintStart_toEndOf="@id/image_my_orders"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_my_orders"
        android:text="20.99"
        android:textSize="15sp"
        android:fontFamily="@font/bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/category_my_orders"
        app:layout_constraintStart_toEndOf="@id/image_my_orders"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/le"
        android:text="LE"
        android:textSize="15sp"
        android:fontFamily="@font/bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/category_my_orders"
        app:layout_constraintStart_toEndOf="@id/price_my_orders"/>


    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/minus_image"
        app:layout_constraintStart_toEndOf="@id/le"
        app:layout_constraintTop_toTopOf="@id/le"
        android:background="@drawable/view_notification_icon"
        android:layout_marginStart="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/minus_image"
        app:layout_constraintBottom_toBottomOf="@id/minus_image"
        app:layout_constraintStart_toStartOf="@id/minus_image"
        app:layout_constraintEnd_toEndOf="@id/minus_image"/>
    <TextView
        android:layout_width="8dp"
        android:layout_height="20dp"
        android:id="@+id/item_counter"
        app:layout_constraintStart_toEndOf="@id/le"
        app:layout_constraintTop_toTopOf="@id/le"
        android:text="1"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="85dp"/>
    
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/plus_image"
        app:layout_constraintStart_toEndOf="@id/le"
        app:layout_constraintTop_toTopOf="@id/le"
        android:background="@drawable/view_notification_icon"
        android:layout_marginStart="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/plus_image"
        app:layout_constraintBottom_toBottomOf="@id/plus_image"
        app:layout_constraintStart_toStartOf="@id/plus_image"
        app:layout_constraintEnd_toEndOf="@id/plus_image"/>

    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_my_orders"
        android:layout_marginTop="6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>