<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CartSettingsActivity">

    <ImageView
        android:layout_width="13.5dp"
        android:layout_height="22dp"
        android:id="@+id/back_arrow"
        android:src="@drawable/ic_backarrow"
        android:layout_marginEnd="17.5dp"
        app:layout_constraintTop_toTopOf="@id/cart_settings"
        app:layout_constraintBottom_toBottomOf="@id/cart_settings"
        app:layout_constraintEnd_toStartOf="@id/cart_settings"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cart_settings"
        android:layout_marginStart="57dp"
        android:layout_marginTop="53dp"
        android:text="Cart Settings"
        android:textStyle="normal"
        android:textSize="24sp"
        android:fontFamily="@font/medium"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cart_settings" />

    <androidx.cardview.widget.CardView
        android:id="@+id/notification_number_container"
        android:layout_width="12dp"
        android:layout_height="14dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="@id/notification"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/basket_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/appWhite"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/menu_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:focusable="false"
        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toBottomOf="@id/notification"
        app:layout_constraintStart_toEndOf="@id/notification"
        app:layout_constraintTop_toTopOf="@id/notification" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:id="@+id/settings_background"
        android:orientation="vertical"
        android:background="@drawable/flowerbackground"
        android:elevation="30dp"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="335dp"
        android:layout_height="330dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/curved_background"
        android:elevation="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="23.6dp"
            android:id="@+id/my_orders_image"
            android:src="@drawable/ic_my_orders"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_orders"
            android:text="My orders"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="normal"
            android:fontFamily="@font/medium"
            android:layout_marginStart="19dp"
            app:layout_constraintStart_toEndOf="@id/my_orders_image"
            app:layout_constraintTop_toTopOf="@id/my_orders_image"
            />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/view_notification_icon"
            app:layout_constraintTop_toTopOf="@id/my_orders_next"
            app:layout_constraintBottom_toBottomOf="@id/my_orders_next"
            app:layout_constraintStart_toStartOf="@id/my_orders_next"
            app:layout_constraintEnd_toEndOf="@id/my_orders_next"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/my_orders_next"
            android:src="@drawable/ic_next"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/my_orders"
            app:layout_constraintBottom_toBottomOf="@id/my_orders"
            />
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/hintColor"
            app:layout_constraintStart_toStartOf="@id/my_orders_image"
            app:layout_constraintTop_toBottomOf="@id/my_orders"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="23.6dp"
            android:id="@+id/pending_shipments_image"
            android:src="@drawable/ic_pending_shipments"
            android:layout_marginTop="30dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_orders_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pending_shipments"
            android:text="Pending Shipments"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="normal"
            android:fontFamily="@font/medium"
            android:layout_marginStart="19dp"
            app:layout_constraintStart_toEndOf="@id/pending_shipments_image"
            app:layout_constraintTop_toTopOf="@id/pending_shipments_image"
            />
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/view_notification_icon"
            app:layout_constraintTop_toTopOf="@id/pending_shipments_next"
            app:layout_constraintBottom_toBottomOf="@id/pending_shipments_next"
            app:layout_constraintStart_toStartOf="@id/pending_shipments_next"
            app:layout_constraintEnd_toEndOf="@id/pending_shipments_next"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/pending_shipments_next"
            android:src="@drawable/ic_next"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pending_shipments"
            app:layout_constraintBottom_toBottomOf="@id/pending_shipments"
            />
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/hintColor"
            app:layout_constraintStart_toStartOf="@id/pending_shipments_image"
            app:layout_constraintTop_toBottomOf="@id/pending_shipments"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="23.6dp"
            android:id="@+id/pending_payments_image"
            android:src="@drawable/ic_pending_shipments"
            android:layout_marginTop="30dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pending_shipments_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pending_payments"
            android:text="Pending Payments"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="normal"
            android:fontFamily="@font/medium"
            android:layout_marginStart="19dp"
            app:layout_constraintStart_toEndOf="@id/pending_payments_image"
            app:layout_constraintTop_toTopOf="@id/pending_payments_image"
            />
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/view_notification_icon"
            app:layout_constraintTop_toTopOf="@id/pending_payments_next"
            app:layout_constraintBottom_toBottomOf="@id/pending_payments_next"
            app:layout_constraintStart_toStartOf="@id/pending_payments_next"
            app:layout_constraintEnd_toEndOf="@id/pending_payments_next"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/pending_payments_next"
            android:src="@drawable/ic_next"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pending_payments"
            app:layout_constraintBottom_toBottomOf="@id/pending_payments"
            />
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/hintColor"
            app:layout_constraintStart_toStartOf="@id/pending_payments_image"
            app:layout_constraintTop_toBottomOf="@id/pending_payments"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="23.6dp"
            android:id="@+id/finished_orders_image"
            android:src="@drawable/ic_pending_payments"
            android:layout_marginTop="30dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pending_payments_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finished_orders"
            android:text="Finished Orders"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="normal"
            android:fontFamily="@font/medium"
            android:layout_marginStart="19dp"
            app:layout_constraintStart_toEndOf="@id/finished_orders_image"
            app:layout_constraintTop_toTopOf="@id/finished_orders_image"
            />
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/view_notification_icon"
            app:layout_constraintTop_toTopOf="@id/finished_orders_next"
            app:layout_constraintBottom_toBottomOf="@id/finished_orders_next"
            app:layout_constraintStart_toStartOf="@id/finished_orders_next"
            app:layout_constraintEnd_toEndOf="@id/finished_orders_next"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/finished_orders_next"
            android:src="@drawable/ic_next"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/finished_orders"
            app:layout_constraintBottom_toBottomOf="@id/finished_orders"
            />
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/hintColor"
            app:layout_constraintStart_toStartOf="@id/finished_orders_image"
            app:layout_constraintTop_toBottomOf="@id/finished_orders"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="23.6dp"
            android:id="@+id/shipping_address_image"
            android:src="@drawable/ic_shipping_address"
            android:layout_marginTop="30dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/finished_orders_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shipping_address"
            android:text="Shipping Address"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="normal"
            android:fontFamily="@font/medium"
            android:layout_marginStart="19dp"
            app:layout_constraintStart_toEndOf="@id/shipping_address_image"
            app:layout_constraintTop_toTopOf="@id/shipping_address_image"
            />
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/view_notification_icon"
            app:layout_constraintTop_toTopOf="@id/shipping_address_next"
            app:layout_constraintBottom_toBottomOf="@id/shipping_address_next"
            app:layout_constraintStart_toStartOf="@id/shipping_address_next"
            app:layout_constraintEnd_toEndOf="@id/shipping_address_next"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/shipping_address_next"
            android:src="@drawable/ic_next"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/shipping_address"
            app:layout_constraintBottom_toBottomOf="@id/shipping_address"
            />
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/hintColor"
            app:layout_constraintStart_toStartOf="@id/shipping_address_image"
            app:layout_constraintTop_toBottomOf="@id/shipping_address"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="23.6dp"
            android:id="@+id/payment_method_image"
            android:src="@drawable/ic_payment_method"
            android:layout_marginTop="30dp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shipping_address_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/payment_method"
            android:text="Payment Method"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="normal"
            android:fontFamily="@font/medium"
            android:layout_marginStart="19dp"
            app:layout_constraintStart_toEndOf="@id/payment_method_image"
            app:layout_constraintTop_toTopOf="@id/payment_method_image"
            />
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/view_notification_icon"
            app:layout_constraintTop_toTopOf="@id/payment_method_next"
            app:layout_constraintBottom_toBottomOf="@id/payment_method_next"
            app:layout_constraintStart_toStartOf="@id/payment_method_next"
            app:layout_constraintEnd_toEndOf="@id/payment_method_next"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/payment_method_next"
            android:src="@drawable/ic_next"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/payment_method"
            app:layout_constraintBottom_toBottomOf="@id/payment_method"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>