<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginTop="10dp"
        android:id="@+id/item_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/viola"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EBA - ACT"
        android:id="@+id/name_checkout"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/item_image"
        app:layout_constraintTop_toTopOf="@id/item_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hair Lotion"
        android:id="@+id/name_checkout2"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@id/name_checkout"
        app:layout_constraintTop_toBottomOf="@id/name_checkout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 LE"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:id="@+id/name_checkout3"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@id/name_checkout2"
        app:layout_constraintTop_toBottomOf="@id/name_checkout2"/>


</androidx.constraintlayout.widget.ConstraintLayout>