<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_reviewer"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:id="@+id/review_rating"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/image_reviewer"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/RatingBar"
        style="?android:attr/ratingBarStyleSmall"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reviewer_name"
        android:layout_marginStart="30dp"
        android:textColor="@color/colorPrimary"
        android:text="Mohamed Ahmed"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/image_reviewer"
        app:layout_constraintTop_toBottomOf="@id/review_rating"
        style="?android:attr/ratingBarStyleSmall"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_product"
        android:layout_marginStart="30dp"
        android:textColor="@color/hintColor"
        android:text="Mohamed Ahmed"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/image_reviewer"
        app:layout_constraintTop_toBottomOf="@id/reviewer_name"
        style="?android:attr/ratingBarStyleSmall"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_date"
        android:textColor="@color/colorPrimary"
        android:text="20-12-2021"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/review_rating"

        style="?android:attr/ratingBarStyleSmall"/>
</androidx.constraintlayout.widget.ConstraintLayout>